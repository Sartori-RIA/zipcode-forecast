<div class="card">
  <div class="card-content">
    <%= form_tag weather_forecasts_path, method: :get do %>
      <div style="display: flex; flex-direction: row; justify-content: space-around;">
        <%= text_field_tag :zipcode, zipcode, placeholder: "ZipCode", maxlength: 5, class: 'input-field' %>
      </div>
      <br>
      <div class="center">
        <%= submit_tag "Forecast for my Zip Code", class: 'btn-primary' %>
      </div>

    <% end %>
  </div>
</div>